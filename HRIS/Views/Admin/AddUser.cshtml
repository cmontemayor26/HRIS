@model HRIS.Models.UserModel


@{
    Layout = null;
}

@RenderPage("Navigation.cshtml")
<style>
    td {
        padding-right: 50px;
        padding-bottom: 20px;
        font-size: 15px;
    }

    table {
    }
</style>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">

        <div class='row'>
            <div class='md-col-4'>
                <h1>Applicant Information</h1>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <!-- Full Name -->
            <div class='row'>
                <div class='md-col-4'>
                    <br>
                    <h2>Basic Information</h2>
                    <br>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <table>
                <tr>
                    <td>
                        <label for="full_name_id" class="control-label">Email</label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="full_name_id" class="control-label">UserLevel</label>
                        @Html.EditorFor(model => model.Userlevel, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Userlevel, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="full_name_id" class="control-label">Password</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>

            <button type="submit" style="height: 50px;width: 100px;font-size: 18px;" class="btn btn-primary">Save!</button>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <abel class="label-success">@ViewBag.SuccessMessage</abel>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <abel class="label-danger">@ViewBag.DuplicateMessage</abel>
                </div>
            </div>
        </div>
    </div>

}






<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


@RenderPage("Footer.cshtml")