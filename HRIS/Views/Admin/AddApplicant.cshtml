@using HRIS.Models;
@model Tuple<Masterlist,WorkExperience>
@{
    Layout = null;
}

@RenderPage("Navigation.cshtml")

<style>
    td {
        padding-right: 50px;
        padding-bottom: 20px;
        font-size: 15px;
    }

    table {
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Applicant').css({ 'background-color': '#37474F' });
    });
</script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">

        <div class='row'>
            <div class='md-col-4'>
                <h1>Applicant Information</h1>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <!-- Full Name -->
            <div class='row'>
                <div class='md-col-4'>
                    <br>
                    <h2>Basic Information</h2>
                    <br>
                </div>
            </div>
            <form action="@Url.Action("AddApplicant", "Admin")">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if (TempData["success"] != null)
                {
                    <div class="alert alert-success">
                        <strong>@TempData["success"]</strong>
                    </div>
                }
                @if (TempData["error"] != null)
                {
                    <div class="alert alert-danger">
                        <strong>@TempData["error"]</strong>
                    </div>
                }
                <table>
                    <tr>
                        <td>
                            <label for="full_name_id" class="control-label">First Name</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.FirstName, new { @Name = "FirstName", @class = "form-control", @autofocus = "autofocus", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.FirstName, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            <label for="full_name_id" class="control-label">Middle Name</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.MiddleName,  new { @Name = "MiddleName", @class = "form-control", @required = true  })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.MiddleName, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            <label for="full_name_id" class="control-label">Last Name</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.LastName, new { @Name = "LastName", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.LastName, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label for="full_name_id" class="control-label">Birth Date</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.Birthday, new {@Name = "Birthday", @class = "form-control", @type = "date", @required = true } )
                            @Html.ValidationMessageFor(tuple => tuple.Item1.Birthday, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            <label for="full_name_id" class="control-label">Marital Status</label>
                            @Html.DropDownList("MaritalStatus", ViewBag.MaritalStatusList as SelectList, "Select one", new { @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.MaritalStatus, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="full_name_id" class="control-label">Position Applied for</label>
                            @Html.DropDownList("JobTitle", ViewBag.JobTitleList as SelectList, "Select one", new { @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.JobTitle, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                </table>
                <div class='row'>
                    <div class='md-col-4'>
                        <br>
                        <h2>Contact Information</h2>
                        <br>
                    </div>
                </div>
                <table>
                    <tr>
                        <td>
                            <label for="full_name_id" class="control-label">Street Address 1</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.Street_Address1, new { @Name = "Street_Address1", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.Street_Address1, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            <label for="full_name_id" class="control-label">Street Address 2</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.Street_Address2, new { @Name = "Street_Address2", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.Street_Address2, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label for="full_name_id" class="control-label">City</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.City, new { @Name = "City", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.City, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            <label for="full_name_id" class="control-label">Province</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.Province, new { @Name = "Province", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.Province, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            <label for="full_name_id" class="control-label">Zip Code</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.ZipCode, new { @Name = "ZipCode", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.ZipCode, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="full_name_id" class="control-label">Phone Number</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.ContactNumber, new { @Name = "ContactNumber", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.ContactNumber, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            <label for="full_name_id" class="control-label">Email</label>
                            @Html.TextBoxFor(tuple => tuple.Item1.PersonalEmail, new { @Name = "PersonalEmail", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item1.PersonalEmail, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                </table>
                <div class='row'>
                    <div class='md-col-4'>
                        <br>
                        <h2>Work Experience</h2>
                        <br>
                    </div>
                </div>
                <table>
                    <tr>
                        <td>
                            <label for="full_name_id" class="control-label">Company Name</label>
                            @Html.TextBoxFor(tuple => tuple.Item2.CompanyName, new { @Name = "CompanyName", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item2.CompanyName, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="full_name_id" class="control-label">Job Title</label>
                            @Html.TextBoxFor(tuple => tuple.Item2.JobTitle, new { @Name = "JobTitle", @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(tuple => tuple.Item2.JobTitle, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label for="full_name_id" class="control-label">DateFrom</label>
                            @Html.TextBoxFor(tuple => tuple.Item2.DateFrom, new { @Name = "DateFrom", @class = "form-control", @required = true, @type = "date" })
                            @Html.ValidationMessageFor(tuple => tuple.Item2.DateFrom, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            <label for="full_name_id" class="control-label">DateTo</label>
                            @Html.TextBoxFor(tuple => tuple.Item2.DateTo, new { @Name = "DateTo", @class = "form-control", @required = true, @type = "date" })
                            @Html.ValidationMessageFor(tuple => tuple.Item2.DateTo, "", new { @class = "text-danger" })
                        </td>
                    </tr>
                </table>
            </form>

        </div>


        <!-- Submit Button -->
        <button type="submit" style="height: 50px;width: 100px;font-size: 18px;" class="btn btn-primary">Save!</button>


    </div>
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script>
        var today = new Date(new Date().getFullYear(), new Date().getMonth(), new Date().getDate());
        $('#startDate').datepicker({
            uiLibrary: 'bootstrap4',
            iconsLibrary: 'fontawesome',

            maxDate: function () {
                return $('#endDate').val();
            }
        });
    </script>
}
@RenderPage("Footer.cshtml")