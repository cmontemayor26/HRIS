@model HRIS.Models.UserModel


@{
    Layout = null;
}

@RenderPage("Navigation.cshtml")
<style>
    td {
        padding-right: 50px;
        padding-bottom: 20px;
        font-size: 15px;
    }

    table {
    }
</style>
<script type="text/javascript">
    $(document).ready(function () {
        $('#Admin').css({ 'background-color': '#37474F' });
    });
</script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">

        <div class='row'>
            <div class='md-col-4'>
                <h1>User Information</h1>
            </div>
        </div>
        <hr>
        <div class="form-group">
            <!-- Full Name -->
            <div class='row'>
                <div class='md-col-4'>
                    <br>
                    <br>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Userid)
                    @Html.HiddenFor(model => model.Email)
                </div>
            </div>
            @if (TempData["error"] != null)
            {
                <div class="alert alert-success">
                    <strong>@TempData["error"]</strong>
                </div>
            }
            <table>
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.Userid)
                        <label for="full_name_id" class="control-label">Old Password</label>
                        @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="full_name_id" class="control-label">Password</label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="full_name_id" class="control-label">Confirm Password</label>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>

            <button type="submit" style="height: 50px;width: 100px;font-size: 18px;" class="btn btn-primary">Save!</button>
        </div>
    </div>

}






<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


@RenderPage("Footer.cshtml")