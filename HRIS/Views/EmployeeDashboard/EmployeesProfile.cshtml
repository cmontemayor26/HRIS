@model IEnumerable<HRIS.Models.qry>
@{
    Layout = null;


}
@RenderPage("Navigation.cshtml")

<link href="~/css/Employee.css" rel="stylesheet" />

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm())
{
    <div class="container">
        <div class="row" style="margin-top: 100px">
            <div class="col-12">
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-2">
                        <img class="img-thumbnail" src="~/images/DSC_0883a.jpg" alt="Thumbnail image"><br>
                        Employee Name><br>
                        Job Title<br>
                        Contact Number<br>
                        Email Address
                    </div>

                    <div class="col-sm-9 col-md-9 col-lg-10">
                        <div class="empWrapper">
                            <br />
                            <div class="tab-slider--nav">
                                <ul class="tab-slider--tabs">
                                    <li class="tab-slider--trigger active" rel="tab1">General Information</li>
                                    <li class="tab-slider--trigger" rel="tab2">Work Information</li>
                                </ul>
                            </div>
                            <div class="tab-slider--container">
                                <div id="tab1" class="tab-slider--body">
                                    <h2>Basic Info</h2>
                                    <p>Toggle switch style tab navigation. Currently only works with two tabs.</p>
                                    
                                    <h2>Personal Details</h2>
                                    <p>Toggle switch style tab navigation. Currently only works with two tabs.</p>
                                    
                                </div>
                                <div id="tab2" class="tab-slider--body">
                                    <h2>Second Tab</h2>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
    <script>
        $("document").ready(function () {
            $(".tab-slider--body").hide();
            $(".tab-slider--body:first").show();
        });

        $(".tab-slider--nav li").click(function () {
            $(".tab-slider--body").hide();
            var activeTab = $(this).attr("rel");
            $("#" + activeTab).fadeIn();
            if ($(this).attr("rel") == "tab2") {
                $('.tab-slider--tabs').addClass('slide');
            } else {
                $('.tab-slider--tabs').removeClass('slide');
            }
            $(".tab-slider--nav li").removeClass("active");
            $(this).addClass("active");
        });

    </script>