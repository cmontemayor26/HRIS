@{
    Layout = null;


}
@RenderPage("Navigation.cshtml")


<!DOCTYPE html>
<link href="~/css/styles.css" rel="stylesheet" />
<link href="~/css/Employee.css" rel="stylesheet" />

<script src="https://unpkg.com/gijgo@1.9.11/js/gijgo.min.js" type="text/javascript"></script>
<link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>OTForm</title>
</head>
<body>
    <div class="container">
        <div class="row" style="margin-top: 100px">
            <div class="col-12">

                <button data-toggle="modal" data-target=".bd-example-modal-lg" class="btn btn-primary pull-right">New Overtime Request</button>

                <!-- The Modal -->
                <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">>
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h6 class="modal-title">OVERTIME AUTHORIZATION AND TIME WORKED</h6>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>
                            <!-- Modal body -->
                            <div class="modal-body">
                                @using (Html.BeginForm("FilterAttendance", "EmployeeDashboard", FormMethod.Post))
                                {
                                <form>
                                    
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <h6>REPORT OF ACTUAL OVERTIME WORKED:</h6>
                                        </div>
                                        @*<label for="dtAdvancedApproval" class="col-sm-6 col-form-label" style="float:right"><b>ADVANCE APPROVAL OF OVERTIME ASSIGNMENT:</b></label>*@
                                        <div class="col-sm-6">
                                            <input id="dtAdvancedApproval">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <div class="form-inline">
                                                <p style="padding-right:10px">Number of hours:</p>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control mb-2 mr-sm-2" id="Numberofhours" style="width:80px; " maxlength="2">
                                        </div>

                                    </div>

                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <p>To be worked on:</p>
                                        </div>
                                        <div class="col-sm-6">
                                            <input id="dtToBeWorkedOn" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <p>Method of compensation:</p>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-check-inline">
                                                <label class="form-check-label">
                                                    <input type="checkbox" class="form-check-input" value="">Payment
                                                </label>
                                            </div>
                                            <div class="form-check-inline">
                                                <label class="form-check-label">
                                                    <input type="checkbox" class="form-check-input" value="">Compensatory Time Off
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12">
                                            <label for="comment">Reason for overtime:</label>
                                            <textarea class="form-control" rows="5" id="Reason"></textarea>
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <label for="Overtimeauthorizedby">Overtime authorized by:</label>
                                            <input type="text" class="form-control" id="Overtimeauthorizedby">
                                        </div>
                                        <div class="col-sm-6">
                                            <label for="dtSigned">Date signed:</label>
                                            <input id="dtSigned" width="276" />
                                        </div>
                                    </div>
                                    <hr />
                                    <h6>REPORT OF ACTUAL OVERTIME WORKED</h6>
                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <div class="form-inline">
                                                <p style="padding-right:10px">Number of hours:</p>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <input type="text" class="form-control mb-2 mr-sm-2" id="Numberofhours" style="width:80px; " maxlength="2">
                                        </div>

                                    </div>

                                    <div class="form-group row">
                                        <div class="col-sm-6">
                                            <p>Worked on:</p>
                                        </div>
                                        <div class="col-sm-6">
                                            <input id="WorkedOn" />
                                        </div>
                                    </div>

                                </form>
                                }
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <input type="submit" class="btn btn-primary" value="Request"><button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Reason for Overtime</th>
                            <th>Authorized by</th>
                            <th>Status</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        $('#dtAdvancedApproval').datepicker({
            uiLibrary: 'bootstrap4'
        });

        $('#dtSigned').datepicker({
            uiLibrary: 'bootstrap4'
        });

        $('#dtToBeWorkedOn').datepicker({
            uiLibrary: 'bootstrap4'
        });

        $('#WorkedOn').datepicker({
            uiLibrary: 'bootstrap4'
        });
        
        $(document).ready(function () {
            $('.form-check-input').click(function () {
                $('.form-check-input').not(this).prop('checked', false);
            });
        });
    </script>
</body>
</html>
